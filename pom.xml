<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.ontotext.publishing</groupId>
  <artifactId>annotation</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>Ontotext Annotation API</name>
  <description>Manage your annotations</description>
  <properties>
    <dropwizard.version>0.9.2</dropwizard.version>
    <dropwizard.java8bundle.version>0.9.0-1</dropwizard.java8bundle.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>io.dropwizard</groupId>
      <artifactId>dropwizard-core</artifactId>
      <version>${dropwizard.version}</version>
    </dependency>
    <dependency>
      <groupId>io.dropwizard.modules</groupId>
      <artifactId>dropwizard-java8</artifactId>
      <version>${dropwizard.java8bundle.version}</version>
    </dependency>
    <dependency>
      <groupId>io.dropwizard.modules</groupId>
      <artifactId>dropwizard-java8-auth</artifactId>
      <version>${dropwizard.java8bundle.version}</version>
    </dependency>
    <dependency>
      <groupId>io.dropwizard.modules</groupId>
      <artifactId>dropwizard-java8-jdbi</artifactId>
      <version>${dropwizard.java8bundle.version}</version>
    </dependency>
      <dependency>
          <groupId>com.smoketurner</groupId>
          <artifactId>dropwizard-swagger</artifactId>
          <version>0.9.3-1</version>
      </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
        <version>1.3</version>
        <executions>
          <execution>
            <phase>prepare-package</phase>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <createDependencyReducedPom>true</createDependencyReducedPom>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>com.ontotext.annotation.AnnotationApplication</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
        <plugin>
            <groupId>com.github.kongchen</groupId>
            <artifactId>swagger-maven-plugin</artifactId>
            <version>3.1.4</version>
            <configuration>
                <apiSources>
                    <apiSource>
                        <springmvc>false</springmvc>
                        <locations>com.ontotext.annotation.resource</locations>
                        <schemes>http,https</schemes>
                        <host>localhost:8089</host>
                        <basePath>/annotations</basePath>
                        <info>
                            <title>Annotation API</title>
                            <version>v0.0.1</version>
                            <description>Annotation API (subset of W3C Open Annotation). Annotate content with concepts</description>
                            <termsOfService>http://www.yourterms.com</termsOfService>
                            <contact>
                                <email>jem.rayfield@ontotext.com</email>
                                <name>Jem Rayfield</name>
                                <url>http://ontotext.com</url>
                            </contact>
                        </info>
                        <swaggerDirectory>${basedir}/gen-swagger</swaggerDirectory>
                        <swaggerFileName>swagger</swaggerFileName>
                        <outputFormats>yaml</outputFormats>
                    </apiSource>
                </apiSources>

            </configuration>
            <executions>
                <execution>
                    <phase>compile</phase>
                    <goals>
                        <goal>generate</goal>
                    </goals>
                </execution>
            </executions>
        </plugin>
    </plugins>
  </build>

  <scm>
    <connection>scm:git:git@github.com:jazzyray/annotation.git</connection>
    <developerConnection>scm:git:git@github.com:jazzyray/annotation.git</developerConnection>
    <url>scm:git:git@github.com:jazzyray/annotation.git</url>
    <tag>HEAD</tag>
  </scm>

</project>
